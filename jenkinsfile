pipeline {
    agent any

    tools {
        jdk 'JAVA_HOME'
        maven 'MAVEN'
    }

    environment {
        DOCKER_COMPOSE_FILE = 'docker-compose.yml'
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'ğŸ“¥ Clonage du dÃ©pÃ´t Git...'
                git branch: 'master', url: 'https://github.com/NakibIheb20/student-management-devops.git'
            }
        }

        stage('Start MySQL') {
            steps {
                echo 'ğŸ¬ DÃ©marrage de MySQL via Docker Compose...'
                sh '''
                    docker compose -f $DOCKER_COMPOSE_FILE up -d db
                    echo "â³ Attente du dÃ©marrage complet de MySQL..."
                    sleep 25
                '''
            }
        }

        stage('Build & Test') {
            steps {
                echo 'ğŸ§ª Compilation et exÃ©cution des tests...'
                sh '''
                    mvn clean test -Dmaven.test.failure.ignore=true \
                        -Dspring.datasource.url=jdbc:mysql://localhost:3306/studentdb \
                        -Dspring.datasource.username=root \
                        -Dspring.datasource.password=root
                '''
            }
            post {
                always {
                    junit allowEmptyResults: true, testResults: '**/target/surefire-reports/*.xml'
                }
            }
        }

        stage('Package') {
            steps {
                echo 'ğŸ“¦ Packaging de lâ€™application...'
                sh 'mvn package -DskipTests'
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'ğŸ³ Construction de lâ€™image Docker...'
                sh 'docker build -t student-management:latest .'
            }
        }

        stage('Stop Containers') {
            steps {
                echo 'ğŸ§¹ Nettoyage : arrÃªt des conteneurs...'
                sh 'docker compose -f $DOCKER_COMPOSE_FILE down'
            }
        }
    }

    post {
        always {
            echo 'ğŸ¯ Pipeline terminÃ©.'
        }
        success {
            echo 'âœ… Build terminÃ© avec succÃ¨s !'
        }
        failure {
            echo 'âŒ Build Ã©chouÃ©.'
        }
    }
}
